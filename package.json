{
  "name": "shift-recorder",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@11.6.1",
  "type": "module",
  "scripts": {
    "predev": "npm run build:tax-engine",
    "dev": "vite",
    "prebuild": "npm run build:tax-engine",
    "build": "tsc -b && vite build",
    "preview": "vite preview --strictPort --port 5173",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "demo": "tsx packages/tax-engine/src/cli/demo.ts",
    "build:tax-engine": "npm run build --workspace=@tax-engine/core",
    "postinstall": "node ./scripts/install-playwright.mjs && npm run build:tax-engine"
  },
  "dependencies": {
    "@tax-engine/core": "workspace:*",
    "@gera2ld/tarjs": "^0.3.1",
    "@heroicons/react": "2.1.5",
    "@tanstack/react-query": "5.62.7",
    "date-fns": "3.6.0",
    "dexie": "4.0.4",
    "fflate": "^0.8.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.28.0",
    "uuid": "9.0.1",
    "vite-plugin-pwa": "0.20.5",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "1.49.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/chai": "4.3.11",
    "@types/node": "22.10.1",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "8.13.0",
    "@typescript-eslint/parser": "8.13.0",
    "@vite-pwa/assets-generator": "0.2.6",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "6.10.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "fake-indexeddb": "^6.2.2",
    "globals": "^15.14.0",
    "happy-dom": "15.11.7",
    "playwright": "1.49.0",
    "postcss": "8.4.49",
    "prettier": "3.3.3",
    "tailwindcss": "3.4.16",
    "tsx": "4.19.1",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.20",
    "vitest": "^2.1.9"
  }
}
